<div id="content">
</div>

<div id="popup"></div>

<script>
  $(document).ready(function(){   
    Project2.Store.venuesAll = new Project2.Collections.Venues;
     
    <% if @user %>
      Project2.Store.events = new Project2.Collections.Events;
      Project2.Store.events.url = "/api/users/<%= @user.id %>/events";
      new Project2.Routers.Events({
        $rootEl: $("#content"),
        $popup: $("#popup"),
        collection: Project2.Store.events
      });
    <% else %>
      Project2.Store.events = new Project2.Collections.Events;
      
      new Project2.Routers.Events({
        $rootEl: $("#content"),
        $popup: $("#popup"),
        collection: Project2.Store.events
      });
    <% end %>
    
    Backbone.history.start();
  });
</script>